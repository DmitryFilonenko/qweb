@using WebUI.Models.QEntities
@model IEnumerable<WebUI.Models.QEntities.QNote>


<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("К списку контрагентов", "Index", "Home")</li>
    <li class="breadcrumb-item">

        @{
            string creditorName = ViewBag.CrediotrName;
            string creditorId = ViewBag.CreditorId;
            QPin currentPin = ViewBag.Pin;
        }

        @Ajax.ActionLink("К списку реестров " + currentPin.CreditorName, "Regs", "Home", new { creditorId = currentPin.CreditorIdLong }, new AjaxOptions()
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "concret_task",
            LoadingElementId = "loader"
        })
    </li>
    <li>
        @Ajax.ActionLink("К списку дел реестра " + currentPin.RegName, "Pins", new { regId = currentPin.RegIdLong }, new AjaxOptions()
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "concret_task",
            LoadingElementId = "loader"
        })
    </li>
    <li class="breadcrumb-item">
        @Ajax.ActionLink("Вернуться к делу", "PinDetails", "Home", new { pin = currentPin.BusinessN }, new AjaxOptions()
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "concret_task",
            LoadingElementId = "loader"
        })
    </li>
</ol>



<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StopDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StopDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Ajax.ActionLink("Редактировать", "NoteEdit", new { pin = item.BusinessN, noteId = item.NoteId }, new AjaxOptions() { UpdateTargetId = "concret_task", LoadingElementId = "loader" }) <span>&nbsp; | &nbsp;</span>
                @Ajax.ActionLink("Удалить", "NoteDelete", new { pin = item.BusinessN, noteId = item.NoteId }, new AjaxOptions() { UpdateTargetId = "concret_task", LoadingElementId = "loader" })
            </td>
        </tr>
    }

</table>

