@model IEnumerable<WebUI.Models.QEntities.Pin>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreditorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameI)
        </th>
