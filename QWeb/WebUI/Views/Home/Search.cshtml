            </td>
        }
        else
        {
            <td class="alert-warning">
                @Html.DisplayFor(modelItem => item.DebtDogovorN)
            </td>
        }

        <td>
            @Ajax.ActionLink("Детально", "PinDetails", new { pin = item.BusinessN }, new AjaxOptions() { UpdateTargetId = "concret_task", LoadingElementId = "loader" })
